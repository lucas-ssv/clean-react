{
  "name": "clean-react",
  "version": "3.0.0",
  "main": "index.js",
  "author": "lucas-ssv <lucas_99silva@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node index",
    "dev:base": "webpack-dev-server --config webpack.dev.js",
    "dev": "yarn dev:base -- --open",
    "build": "webpack --config webpack.prod.js",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test -- --watch",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info",
    "test:cypress": "cypress open",
    "test:cypress:run": "cypress run",
    "test:cypress:ci": "start-server-and-test dev:base http-get://localhost:8080 test:cypress:run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.8",
    "@cypress/webpack-preprocessor": "^5.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "coveralls": "^3.1.1",
    "css-loader": "^6.5.1",
    "cypress": "^9.2.1",
    "eslint": "^8.2.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.5.3",
    "favicons": "^7.0.0-beta.3",
    "favicons-webpack-plugin": "^5.0.2",
    "git-commit-msg-linter": "^4.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-localstorage-mock": "^2.4.18",
    "lint-staged": ">=10",
    "mini-css-extract-plugin": "^2.5.3",
    "node-sass": "^7.0.1",
    "sass-loader": "^12.3.0",
    "start-server-and-test": "^1.14.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0",
    "yarn-update": "^0.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint 'src/**' --fix",
      "yarn test:staged"
    ]
  },
  "dependencies": {
    "axios": "^0.26.0",
    "express": "^4.18.0",
    "express-history-api-fallback": "^2.2.1",
    "follow-redirects": "^1.14.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
